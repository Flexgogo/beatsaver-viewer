html
  background #111

#controls
  align-items center
  background rgba(180, 180, 180, 0.75)
  border-radius 5px
  bottom 0
  display flex
  left 0
  margin 0 auto 20px auto
  padding 5px 10px
  position fixed
  right 0
  width 550px
  z-index 99999999

  #logo
    margin-right 10px
    img
      height 32px
      width 32px

  &.isPlaying
    #pause
      opacity 1

  #pause
    display flex
    opacity 0
    padding-right 10px
    transition opacity .5s

	#timeline
		background #111
		border-radius 15px
		height 20px
		width 160px

  #playhead
    background #FAFAFA
    border-radius 50%
    height 18px
    margin-top 1px
    width 18px

#songInfoContainer
  align-items center
  display flex
  padding-left 20px

  img
    height 32px
    width 32px

  p
    color #111
    font-family monospace
    font-size 13px
    margin 0
    text-transform uppercase

  #songInfo
    display flex
    flex-direction column
    padding-left 15px

  #controlsDifficulty
    border 1px solid #111
    border-radius 5px
    cursor pointer
    padding 5px 10px
    position absolute
    right 10px
    text-align center
    &:after
      content '\25B2'
      display inline-block
      margin-left 5px

#controlsDifficultyContainer
  bottom 0
  display none
  position fixed

#timeline
  cursor pointer

#vrButton
  position absolute
  background url(../assets/img/enter-vr-button-background.png) no-repeat
  background-size cover
  border 0
  cursor pointer
  right 20px
  bottom 20px
  z-index 9999999
  width 84px
  height 47px

#vrButton.a-hidden
  visibility hidden

#vrButtonactive
  border 0

#vrButtonhover
  background-position 0 -50.5px
